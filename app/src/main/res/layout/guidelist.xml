<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/guide_img"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="guide_title"
        android:layout_margin="5dp"
        android:id="@+id/guide_title"
        android:layout_below="@+id/guide_img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:textSize="15sp"
        android:text="guide_id"
        android:id="@+id/guide_id"
        android:layout_below="@+id/guide_title"
        android:layout_alignLeft="@+id/guide_title"
        android:layout_alignStart="@+id/guide_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="guide_brief"
        android:ellipsize="end"
        android:singleLine="true"
        android:lines="1"
        android:id="@+id/guide_brief"
        android:layout_below="@+id/guide_id"
        android:layout_alignLeft="@+id/guide_id"
        android:layout_alignStart="@+id/guide_id" />
</RelativeLayout>